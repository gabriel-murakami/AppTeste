<%= render 'layouts/bootstrap' %>

<p id="notice"><%= notice %></p>

<h1>Memes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Link</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memes.each do |meme| %>
      <tr>
        <td><%= meme.title %></td>
        <td><%= meme.category %></td>
        <td><a href="<%= meme.link %>"><img src="<%= meme.link %>" alt="" style="width: 50px; height: 50px; border: 2px solid black;"></a></td>
        <td><%= meme.description %></td>
        <td><%= link_to 'Show', meme %></td>
        <td><%= link_to 'Edit', edit_meme_path(meme) %></td>
        <td><%= link_to 'Destroy', meme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Meme', new_meme_path %>

